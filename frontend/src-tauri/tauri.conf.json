{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "File Organizer",
  "version": "0.2.0",
  "identifier": "com.fileorganizer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "File Organizer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "exceptionDomain": "localhost"
    },
    "externalBin": [
      "binaries/file-organizer-backend"
    ],
    "icon": [
      "icons/icon.png"
    ]
  }
}

